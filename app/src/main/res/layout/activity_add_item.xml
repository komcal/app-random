<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AddItemActivity"
    android:background="#ffd6fffd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:background="#ff8efdff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOOD"
            android:id="@+id/textView"
            android:textSize="40dp"
            android:layout_marginStart="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="30dp"
            android:textColor="#ff161340" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RANDOM"
            android:id="@+id/textView2"
            android:textSize="40dp"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginTop="0dp"
            android:textColor="#ff161340" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_alignParentEnd="true"
        android:id="@+id/menu1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1"
            android:id="@+id/textView3"
            android:textSize="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp"
            android:layout_marginLeft="30dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="#ff917eff"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your menu."
            android:id="@+id/textView4"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginLeft="10dp"
            android:textColor="#ff917eff" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:layout_weight="1.11"
        android:layout_alignBottom="@+id/Addbtn"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/Addbtn" />

    <Button
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:text="add"
        android:id="@+id/Addbtn"
        android:onClick="additem"
        android:layout_below="@+id/menu1"
        android:layout_alignParentEnd="true"
        android:background="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu2"
        android:layout_above="@+id/btnlayout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/textView5"
            android:textSize="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:background="#ff917eff"
            android:textColor="#ffffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many ?"
            android:id="@+id/textView6"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginLeft="10dp"
            android:textColor="#ff917eff"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnlayout"
        android:layout_above="@+id/Randombtn"
        android:layout_centerHorizontal="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/btn1"
            android:text="1"
            android:onClick="setrandom"
            android:nestedScrollingEnabled="true"
            android:background="#ffffff"
            android:focusable="false" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="2"
            android:id="@+id/btn2"
            android:onClick="setrandom"
            android:background="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="3"
            android:id="@+id/btn3"
            android:onClick="setrandom"
            android:background="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="4"
            android:id="@+id/btn4"
            android:onClick="setrandom"
            android:background="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="5"
            android:id="@+id/btn5"
            android:onClick="setrandom"
            android:background="#ffffff" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random"
        android:id="@+id/Randombtn"
        android:textSize="20dp"
        android:onClick="changePage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Item"
        android:layout_below="@+id/input"
        android:layout_alignParentStart="true"
        android:background="#bdfffb"
        android:textColor="#010101"
        android:maxLines="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:layout_above="@+id/menu2" />

</RelativeLayout>
